@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure To Delete  @Model.Name Department?</h1>

<!-- Bootstrap Tabs -->

<partial name="Partials/_DeleteDetailsPartial" model="Model" />

<form asp-action="_DeleteDetailsPartial" asp-route-EmpId="@Model.Id" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mt-4">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back To list</a>
    </div>
</form>

